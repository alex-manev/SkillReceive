@model SkillServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageURL" alt="House Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>
                Price Per Month:
                <b>@String.Format("{0:f2}", Model.PricePerMonth) BGN</b>
            </h6>
            <h6>(Participants: @(Model.Participants))</h6>
            <br />
            <a asp-controller="OnHandExperience" asp-action="Details" asp-route-id="@Model.Id"
               asp-route-information="@Model.GetInformation()" class="btn btn-success">Details</a>
            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="OnHandExperience" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning">Edit</a>
                <a asp-controller="OnHandExperience" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">Delete</a>
                <p></p>

                <form class="input-group-sm" asp-controller="OnHandExperience"
                      asp-action="Join" asp-route-id="@Model.Id" method="post">
                    <input class="btn btn-primary" type="submit" value="Join" />
                </form>

                <form asp-controller="OnHandExperience" asp-action="Leave"
                      asp-route-id="@Model.Id" method="post">
                    <input class="btn btn-primary" type="submit" value="Leave" />
                </form>

            }
        </div>
    </div>
</div>
