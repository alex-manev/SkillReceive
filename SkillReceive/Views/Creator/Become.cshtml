@model BecomeCreatorFormModel

@{
    ViewBag.Title = "Become Creator";
}

<h2 style="color:#048c7d" class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="0888888888">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input style="border-color:#048c7d;background-color:aquamarine;color:black;width:400px" class="btn btn-primary mt-3 " type="submit" value="Become" />
            </div>
        </form>
        <br></br>
        <div style=" text-align:center;background-color: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
            <strong style="color: #721c24;">Warning!</strong> By becoming a creator you lose the ability to join courses!
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
