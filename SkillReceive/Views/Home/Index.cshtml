@model IEnumerable<SkillIndexServiceModel>

@{
    ViewData["Title"] = "Home Page";
    var skills = Model.ToList();
}

@if (!skills.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for learning skills!</h1>
        <p class="lead">
            There are no skills in the system currently available
            so why don't you just add one?
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Skill" asp-action="Add" class="btn btn-primary btn-lg"
           role="button">Add a Skill</a>
            }
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < skills.Count(); i++)
        {
            var skill = skills[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                 src="@skill.ImageUrl" alt="@skill.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <p style="background-color: blanchedalmond; color:black
"> @skill.Title</p>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="mb-5"></div>

<div class="row">
 <div class="col-12 text-center">
  <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
 </div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics">
    <div class="row">
        <h2 class="col-md-2 text-center" id="total-skills"></h2>
        <h2 class="col-md-2 text-center" id="total-participants"></h2>
    </div>
</div>

@section Scripts {
<script>
    $('#statistics-button').on('click', ev => 
    {
        $.get('/api/statistic', data => {
            $('#total-skills').text(data.totalSkills + ' Skills');
            $('#total-participants').text(data.totalParticipants + ' Participants');
            $('#statistics').removeClass('d-none');
            $('#statistics-button').hide();

        });
    })
</script>
}
